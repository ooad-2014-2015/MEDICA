<Window x:Class="Medica.Wages_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medica - Admin - Wages" Height="455" Width="354" Icon="doctor_blue.ico">
    <Grid>
        <ListBox x:Name="Wages_ListBox" HorizontalAlignment="Left" Height="206" VerticalAlignment="Top" Width="316" Margin="10,90,0,0"/>
        <Label x:Name="Info_Label" Content="Name + Base wage + Bonus" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,35,0,0" FontWeight="Bold"/>
        <Button x:Name="Pay_Button" Content="Pay" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="251,376,0,0" Click="Pay_Button_Click"/>
        <Button x:Name="Cancel_Button" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="171,376,0,0" Click="Cancel_Button_Click"/>
        <Label x:Name="Info_Label1" Content="Bonus is calculated by formula 300 * Physicians rating" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,59,0,0" FontStyle="Italic" Width="303"/>
    </Grid>
</Window>
